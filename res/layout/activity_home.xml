<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wedding.amitwedsjyoti.HomeActivity" >

    <Button
        android:id="@+id/ButtonInvite"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_invite"
        android:onClick="handleClick" />

    <Button
        android:id="@+id/ButtonWedding"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_alignBaseline="@+id/ButtonInvite"
        android:layout_alignBottom="@+id/ButtonInvite"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_wedding"
        android:onClick="handleClick" />

    <Button
        android:id="@+id/ButtonCards"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_alignLeft="@+id/ButtonInvite"
        android:layout_below="@+id/ButtonInvite"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_cards"
        android:onClick="handleClick" />

    <Button
        android:id="@+id/ButtonVenue"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_alignBaseline="@+id/ButtonCards"
        android:layout_alignBottom="@+id/ButtonCards"
        android:layout_alignLeft="@+id/ButtonWedding"
        android:background="@drawable/btn_venue"
        android:onClick="handleClick" />

    <Button
        android:id="@+id/ButtonWelcome"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_alignLeft="@+id/ButtonCards"
        android:layout_below="@+id/ButtonCards"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_welcome"
        android:onClick="handleClick" />

    <Button
        android:id="@+id/ButtonContact"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_alignBaseline="@+id/ButtonWelcome"
        android:layout_alignBottom="@+id/ButtonWelcome"
        android:layout_alignLeft="@+id/ButtonVenue"
        android:background="@drawable/btn_contact"
        android:onClick="handleClick" />

</RelativeLayout>